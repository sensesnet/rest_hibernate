<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="pojos" auto-import="false"  catalog="my_db">
    <class name="Meal" table="Meal">

        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>

        <property name="mealName" column="mealName" type="string"/>
        <property name="mealPrice" column="mealPrice" type="int"/>
        <property name="mealTime" column="mealTime" type="int"/>
        <property name="mealConsist" column="mealConsist" type="string"/>

    </class>
</hibernate-mapping>
